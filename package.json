{
    "name": "todo-angular",
    "version": "1.0.0",
    "description": "A full-stack to-do management app built with a Node.js (TypeScript) REST API and an Angular front end",
    "main": "dist/server/main.js",
    "type": "module",
    "scripts": {
        "ng": "ng",
        "watch:server": "pnpm tsc --watch --project tsconfig.server.json",
        "watch:client": "ng build --watch --configuration development",
        "dev": "conc --kill-others \"pnpm ng serve\" pnpm:watch:server \"nodemon\"",
        "build:server": "pnpm tsc --project tsconfig.server.json",
        "build:client": "ng build",
        "start:server": "NODE_ENV=production node dist/server/main.js",
        "start:client": "pnpm serve -s ./dist/client/browser -l 4200",
        "test": "ng test",
        "format": "pnpm prettier --write 'src/**/*.{ts,json,scss,md,html}'"
    },
    "keywords": [
        "typescript",
        "nodejs",
        "api",
        "todo",
        "rest"
    ],
    "author": "Dmitriy Bogolyubov",
    "license": "MIT",
    "dependencies": {
        "@angular/animations": "^19.1.5",
        "@angular/common": "^19.1.5",
        "@angular/compiler": "^19.1.5",
        "@angular/core": "^19.1.5",
        "@angular/forms": "^19.1.5",
        "@angular/platform-browser": "^19.1.5",
        "@angular/platform-browser-dynamic": "^19.1.5",
        "@angular/router": "^19.1.5",
        "express": "^4.21.2",
        "rxjs": "^7.8.1",
        "serve": "^14.2.4",
        "tslib": "^2.8.1",
        "zone.js": "^0.15.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^19.1.6",
        "@angular/cli": "^19.1.6",
        "@angular/compiler-cli": "^19.1.5",
        "@types/express": "^5.0.0",
        "@types/jasmine": "^5.1.5",
        "@types/node": "^22.13.1",
        "concurrently": "^9.1.2",
        "jasmine-core": "^5.6.0",
        "karma": "^6.4.4",
        "karma-chrome-launcher": "^3.2.0",
        "karma-coverage": "^2.2.1",
        "karma-jasmine": "^5.1.0",
        "karma-jasmine-html-reporter": "^2.1.0",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.1",
        "typescript": "^5.7.3"
    }
}